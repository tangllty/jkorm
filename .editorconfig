root = true

[*]
charset = utf-8
indent_size = 4
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,java,groovy}]
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^
ij_any_blank_lines_around_class = 1

[*.{yml,yaml,json}]
indent_size = 2
